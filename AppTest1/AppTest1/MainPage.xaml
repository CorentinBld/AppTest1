<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTest1.MainPage">

    <StackLayout  BackgroundColor="AntiqueWhite">
        <Frame BackgroundColor="Gray" Margin="5" BorderColor="Black">
            <Label Text="Control LED and Robot" HorizontalTextAlignment="Center" TextColor="White" FontSize="24"/>
        </Frame>
        <!--Ajout du logo de l'Insset-->
        <Image Source= "insset_logo.png" HeightRequest="40" HorizontalOptions="StartAndExpand" VerticalOptions="EndAndExpand" TranslationY="370" TranslationX="-30" Margin="5"/>
        <!--Ajout du logo de l'UPJV-->
        <Image Source= "logo_UPJV.png" HeightRequest="120" HorizontalOptions="EndAndExpand" VerticalOptions="EndAndExpand" TranslationY="150" Margin="5"/>
        <!--Ajout du button pour changé de Page -->
        <Button Text="Choose Color LED" VerticalOptions="EndAndExpand" HorizontalOptions="CenterAndExpand"
                BackgroundColor= "Gray" FontSize="12" CornerRadius="5" TextColor="White" BorderColor="Black" BorderWidth="2" Margin="5"
                Clicked="OnNextPageButton_Clicked"/>
        

       
        
       
    </StackLayout>

</ContentPage>